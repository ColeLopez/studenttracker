<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cole.controller.StudentViewController"
      prefHeight="400.0" prefWidth="600.0"
      spacing="10" style="-fx-padding: 10;">
    <children>
        <TextField fx:id="searchField" />
        <TableView fx:id="studentTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="numberColumn" prefWidth="102.0" text="Student Number" />
                <TableColumn fx:id="nameColumn" prefWidth="104.0" text="Student Name" />
                <TableColumn fx:id="idNumberColumn" prefWidth="90.0" text="ID Number" />
                <TableColumn fx:id="branchColumn" prefWidth="90.0" text="Branch" />
                <TableColumn fx:id="emailColumn" prefWidth="98.0" text="Email" />
                <TableColumn fx:id="phoneColumn" prefWidth="71.0" text="Phone" />
                <TableColumn fx:id="slpColumn" prefWidth="93.0" text="SLP Course" />
                <TableColumn fx:id="statusColumn" minWidth="4.0" prefWidth="83.0" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
