<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cole.controller.SLPModuleController">

    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox spacing="10">
            <Label text="Select SLP:" />
            <ComboBox fx:id="slpComboBox" prefWidth="300" promptText="Choose an SLP" />
            <Button onAction="#handleAddModules" text="Link Modules" />
            <Button onAction="#handleRemoveModule" text="Remove Module" />
            <Button onAction="#handleNewModule" text="New Module" /> <!-- âœ… New -->
        </HBox>

        <TableView fx:id="moduleTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="codeColumn" prefWidth="150" text="Module Code" />
                <TableColumn fx:id="nameColumn" prefWidth="300" text="Name" />
                <TableColumn fx:id="passRateColumn" prefWidth="100" text="Pass Rate" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
