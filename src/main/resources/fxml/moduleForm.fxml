<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cole.controller.ModuleFormController"
            prefWidth="400.0" prefHeight="300.0">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Add New Module" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TextField fx:id="codeField" promptText="Module Code (e.g., MOD101)" />
        <TextField fx:id="nameField" promptText="Module Name" />
        <TextField fx:id="passMarkField" promptText="Pass Mark (e.g., 50)" />

        <HBox spacing="10" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel"/>
            <Button text="Save Module" onAction="#handleSave"/>
        </HBox>
    </VBox>
</AnchorPane>
